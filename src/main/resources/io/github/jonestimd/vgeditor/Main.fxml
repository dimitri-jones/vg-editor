<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="io.github.jonestimd.vgeditor.MainController">
    <top>
        <MenuBar fx:id="menuBar">
            <Menu text="%menu.file">
                <MenuItem text="%file.new" onAction="#createFile" accelerator="%file.new.accelerator"/>
                <MenuItem text="%file.open" onAction="#openFile" accelerator="%file.open.accelerator"/>
                <MenuItem text="%file.save" onAction="#saveFile" accelerator="%file.save.accelerator"/>
                <MenuItem text="%file.saveAs" onAction="#saveFileAs"/>
                <SeparatorMenuItem/>
                <MenuItem text="E_xit" onAction="#exitApplication"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <ScrollPane fx:id="scrollPane"><Pane fx:id="diagram"/></ScrollPane>
    </center>
</BorderPane>
