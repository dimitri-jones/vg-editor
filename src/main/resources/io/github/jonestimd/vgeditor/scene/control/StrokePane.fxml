<?import io.github.jonestimd.vgeditor.scene.control.NumericFormatter?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox styleClass="control-group"
      xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="io.github.jonestimd.vgeditor.scene.control.StrokePaneController">
    <HBox alignment="CENTER">
        <CheckBox fx:id="stroke" text="%stroke" selected="true" onAction="#onStrokeChange" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <ColorPicker fx:id="strokeColor" onAction="#onStrokeColorChange"/>
    </HBox>
    <HBox alignment="CENTER">
        <Label text="%stroke.width"/>
        <TextField fx:id="strokeWidthInput" text="1" onKeyReleased="#onStrokeWidthChange" HBox.hgrow="ALWAYS">
            <textFormatter><NumericFormatter fx:factory="forDouble"/></textFormatter>
        </TextField>
    </HBox>
</VBox>
